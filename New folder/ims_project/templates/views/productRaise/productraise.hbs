<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  {{>side}}
  <div class="height-100 bg-light">
    <h3 class="pt-4">Product</h3>
    {{#if message}}
    <div class="alert alert-info">{{message}}</div>
    {{/if}}
    <div class="col-md-12 main-table-data main-table-data-form container mt-4 border">
      <form action="/productRaise" method="post" class="form-form">
        <div class="form-group py-2">
          <div class="col-md-12 title-title">
            <h3 class="pt-4">Product Raise</h3>
          </div>
          <label for="exampleFormControlSelect1">Store</label>
          <select class="form-control  " name="outletId" id="exampleFormControlSelect1">
            <option>Select Store</option>
            {{#each store}}
            <option value="{{outletId}}"> {{ storeName }} </option>
            {{/each}}
          </select>
        </div>
        <div class="form-group py-2">
          <label for="exampleFormControlSelect1">Product</label>
          <select class="form-control" name="itemId" id="exampleFormControlSelect1">
            <option>Select Product</option>
            {{#each product}}
            <option value="{{itemId}}"> {{ itemName }} </option>
            {{/each}}
          </select>
        </div>
        <div class="form-group py-2">
          <label for="exampleFormControlTextarea1">MRP</label>
          <textarea class="form-control" name="mrp" id="exampleFormControlTextarea1" rows="2"></textarea>
        </div>
        <div class="form-group py-2">
          <label for="exampleFormControlTextarea1">Price</label>
          <textarea class="form-control" name="price" id="exampleFormControlTextarea1" rows="2"></textarea>
        </div>
         <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="applied_to_all" name="store_selection" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Applied to all Stores
                        </label>
                    </div>
        <div class="button-container">
          <button class="button-34" type="submit" role="button">Update</button>
          <button class="button-34" type="reset" role="button">Cancel</button>
        </div>
      </form>
    </div>
  </div>
</body>

</html>