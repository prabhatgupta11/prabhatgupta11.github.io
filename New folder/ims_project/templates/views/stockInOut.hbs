<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body id="body-pd">
        {{>side}}
        <form action="/stockInOut" method="post">
        <section>
            <div class="height-100 bg-light">
                <h3 class="pt-4">Add Category</h3>
                {{#if message}}
                <div class="alert alert-info">{{message}}</div>
                {{/if}}
                <div class="col-md-12 main-table-data container mt-4 border">
                    <h3 class="pt-4">Stock In/Out</h3>
                    <div class="handler-container col-md-12">
                        <div class="col-md-6 textarea-container-first pt-4">
                            <div class="md-form mb-4 active-pink-textarea-2">
                                <label for="form17" class="formlabel">Store</label>
                                <select id="form17" name="outletId" class="form-control">
                                    <option>Select Store</option>
                                    {{#each store}}
                                    <option value="{{outletId}}"> {{ storeName }} </option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="md-form mb-4 active-pink-textarea-2">
                                <label for="form17" class="formlabel">Type (in/out)</label>
                                <select id="form17" name="type" class="form-control">
                                    <option>Select Type</option>
                                    <option value="in">In</option>
                                    <option value="out">Out</option>
                                </select>
                            </div>

                            <div class="md-form mb-4  active-pink-textarea-2">
                                <label for="form17" class="formlabel">Remarks</label>
                                <textarea id="form17" name="remarks" class="md-textarea form-control" rows="2"
                                    cols="5"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6 textarea-container-second pt-4">
                            <div class="md-form mb-4 active-pink-textarea-2">
                                <label for="form17" class="formlabel">Product</label>
                                <select id="form17" name="itemId" class="form-control">
                                    <option>Select Product</option>
                                    {{#each product}}
                                    <option value="{{itemId}}"> {{ itemName }} </option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="md-form mb-4  active-pink-textarea-2">
                                <label for="form17" class="formlabel">Qty</label>
                                <textarea id="form17" name="qty" class="md-textarea form-control" rows="2"
                                    cols="5"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="container" style="padding: 50px;">
                        <div class="row">
                            <div class="col-md-6" style="text-align: center;">
                                <button class="button-34" role="button" type="submit"
                                    style="margin:10px">Update</button>
                            </div>
                            <div class="col-md-6" style="text-align: center;">
                                <button class="button-34" role="button" type="reset"
                                    style="margin:10px ">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>

</body>

</html>